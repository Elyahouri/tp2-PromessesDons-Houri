{% extends 'base.html.twig' %}

{% block title %}Donation index{% endblock %}

{% block body %}
    <h1>Donation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Amount</th>
                <th>Créée le</th>
                <th>Honoré</th>
                <th>Donateur</th>
                <th>Campagne</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for donation in donations %}
            <tr>
                <td>{{ donation.id }}</td>
                <td>{{ donation.amount }}</td>
                <td>{{ donation.createdAt ? donation.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                {% if donation.honored %}
                    <td>{{ donation.honoredAt ? donation.honoredAt|date('Y-m-d H:i:s') : '' }}</td>
                {% else %}
                    <td><p class="btn btn-danger">Non</p></td>
                {% endif %}
                <td></td>
                <td></td>
                <td>
                    <a href="{{ path('app_donation_show', {'id': donation.id}) }}">show</a>
                    <a href="{{ path('app_donation_edit', {'id': donation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_donation_new') }}">Create new</a>
{% endblock %}
